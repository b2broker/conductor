{
    "extensions": [
        "golang.Go"
    ],
    "image": "dev-golang:latest",
    "name": "Conductor",
    "postCreateCommand": "go version",
    "remoteUser": "vscode",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "settings": {
        "go.gopath": "/go",
        "go.goroot": "/usr/local/go",
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true
    }
}